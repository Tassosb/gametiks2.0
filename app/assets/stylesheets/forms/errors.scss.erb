@import '../variables';

#flash-messages {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50px;
  width: 100%;
  margin-bottom: 10px;

  .flash-items {
    display: flex;
    justify-content: center;
    margin: 0;
    position: relative;
    border-radius: 3px;
    background-color: $white-half-transparent;

    .item {
      color: $red;
      padding: 5px;
      margin: 0;
      text-align: center;

    }

  }
}
