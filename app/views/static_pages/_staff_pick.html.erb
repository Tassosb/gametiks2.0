
<div id='staff-pick-container'>
  <div id='first-row' class='col-xs-12'>
    <div id='three-stars'>
      <img src="https://s3.amazonaws.com/gametiks/images/stars_inline.png" />
    </div>
    <div id='name-container' class='ribbon-container'>
      <div class='ribbon'>
        <% username = Rails.env.development? ? 'Jason Loblein' : 'Kimmi Guest' %>
        <% @user = User.where('lower(name) = ?', username.downcase).first  %>
        <%= link_to @user.name.upcase, user_path(@user), class: 'ribbon-content' %>
      </div>
    </div>
  </div>
  <div id='second-row'>
    <div class='stars hidden-xs' >
      <img src="https://s3.amazonaws.com/gametiks/images/star_decor_left.png" />
    </div>
    <div id='staff-pick'>
      <div id='log-wrapper'>
        <div class='log'>
          <% harvest_id = Rails.env.development? ? 1 : 83 %>
          <% harvest = Harvest.find(harvest_id) %>
          <%= image_tag harvest.image.url(:square), class: 'harvest-img'%>
          <div class='img-infoscreen'>
            <div id='text-wrapper'>
              <h5>Registered <%= harvest.created_at %></h5>
              <h4><span class='label'>Game Type: </span><span class='field'><%= harvest.animal_type %></span></h4>
              <h4><span class='label'>Weapon Used: </span><span class='field'><%= harvest.weapon_type %></span></h4>
              <h4><span class='label'>Points Awarded: </span><span class='field'><%= harvest.formatted_points %></span></h4>
              <h4><span class='label'>Weight: </span><span class='field'><%= formatted_weight(harvest.weight) %></span></h4>
              <% if !harvest.description.blank? %>
                <p>
                  <%= harvest.description.truncate(110) %>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class='stars hidden-xs' >
      <img src="https://s3.amazonaws.com/gametiks/images/star_decor_right.png" />
    </div>
  </div>
</div>
