
<div class='container-fluid splash-main'>
  <div class='row title-container'>

    <% unless flash.empty? %>
      <div id='flash-messages-container' class='col-xs-11 col-sm-7'>
        <% flash.each do |message_type, message| %>
          <div class="flash-message"><%= message %></div>
        <% end %>
      </div>
    <% end %>

    <div class='title-container col-xs-12 col-md-6'>
        <img src='https://d2m6u6shu0evoe.cloudfront.net/images/gametiks_logo.png' class='title'/>
    </div>

  </div>
  <div id='bottom-row'>

  </div>
  <div id='splash-buttons-container' class='col-xs-8 col-sm-7'>
    <div id='left-frame'></div>
    <div id='right-frame'></div>
    <a href='/gallery' id='gallery-button' class='gametiks-gradient-cool'>
      VISIT GALLERY
      <i class='fa fa-camera fa-2x' aria-hidden='true'></i>
    </a>
    <% if !current_user %>
      <div id='sign-up-buttons-container' class='col-xs-12'>
        <a href='/users/sign_up' class='main-btn gametiks-gradient-cool'>
          SIGN UP WITH EMAIL
          <i class="fa fa-envelope fa-2x" aria-hidden="true"></i>
        </a>
        <a class='main-btn gametiks-gradient-cool' href='/users/auth/facebook' data-confirm="If you have already signed up by email, this will create another account!">
          CONTINUE WITH FACEBOOK
          <i class="fa fa-facebook-square fa-2x" aria-hidden="true"></i>
        </a>
      </div>
    <% end %>
  </div>
  <div id='bottom-left-corner'></div>
  <div id='bottom-right-corner'></div>
</div>

<div class='container-fluid'>
  <div class='row'>
    <div class='elevator-pitch-container col-xs-12'>
      <div class='elevator-pitch'>
        <p>
          STAFF PICK OF THE WEEK
        </p>
      </div>
    </div>
  </div>
  <div class='row'>
    <%= render partial: 'staff_pick' %>
  </div>
  <div class='row'>
    <div class='elevator-pitch-container col-xs-12'>
      <div class='elevator-pitch'>
        <p>TRACK AND TALLY YOUR HARVESTS</p>
      </div>
    </div>
  </div>
  <div class='row'>
    <%= render partial: 'track_and_tally' %>
  </div>
  <div class='row'>
    <div class='elevator-pitch-container'>
      <div class='elevator-pitch'>
        <p>CONNECT WITH HUNTERS IN THE COMMUNITY</p>
      </div>
    </div>
  </div>
  <div class='row'>
    <%= render partial: 'sampled_users' %>
  </div>
</div>
<div class='container-fluid'>
  <div class='row'>
    <div class='elevator-pitch-container'>
      <div class='elevator-pitch'>
        <p>AND BROWSE HARVESTS AROUND THE GLOBE</p>
      </div>
    </div>
  </div>
  <div class='row'>
    <%= render partial: 'maps/main_map' %>
  </div>
</div>
