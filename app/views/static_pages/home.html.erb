
<div class='container-fluid splash-main'>
  <div class='row title-container'>

    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>

    <div class='title-container col-xs-12 col-md-6'>
        <img src='https://d2m6u6shu0evoe.cloudfront.net/images/gametiks_logo.png' class='title'/>
      <div class='subtitle'></div>
    </div>

    <!-- Display different buttons based on screen type
      Hide buttons if already signed in -->
    <% if !current_user %>
      <div id='sign-up-btns-mobile-container' class='visible-xs'>
        <div class='flex'>
          <a href='/users/sign_up' class='main-btn-mobile gametiks-gradient-warm'>SIGN UP WITH EMAIL</a>
          <a href='/users/auth/facebook' class='main-btn-mobile gametiks-gradient-warm'>CONTINUE WITH FACEBOOK</a>
        </div>
      </div>

      <div id='sign-up-buttons-container' class='col-sm-12 hidden-xs'>
        <div class='gt-btn-container'>
          <a class='gt-btn email' href='/users/sign_up'>SIGN UP WITH EMAIL<i class="fa fa-envelope fa-3x" aria-hidden="true"></i></a>
        </div>
        <div class='gt-btn-container'>
          <a class='gt-btn' href='/users/auth/facebook' data-confirm="WARNING: If you have already signed up by email, this will create another account!">CONTINUE WITH FACEBOOK<i class="fa fa-facebook-square fa-3x" aria-hidden="true"></i></a>
        </div>
      </div>
      <% end %>

  </div>
</div>
<div class='container-fluid'>
  <div class='row'>
    <div class='elevator-pitch-container col-xs-12'>
      <div class='elevator-pitch'>
        <p>
          STAFF PICK OF THE WEEK
        </p>
      </div>
    </div>
  </div>
  <div class='row'>
    <%= render partial: 'staff_pick' %>
  </div>
  <div class='row'>
    <div class='elevator-pitch-container col-xs-12'>
      <div class='elevator-pitch'>
        <p>TRACK AND TALLY YOUR HARVESTS</p>
      </div>
    </div>
  </div>
  <div class='row'>
    <%= render partial: 'track_and_tally' %>
  </div>
  <div class='row'>
    <div class='elevator-pitch-container'>
      <div class='elevator-pitch'>
        <p>CONNECT WITH HUNTERS IN THE COMMUNITY</p>
      </div>
    </div>
  </div>
  <div class='row'>
    <%= render partial: 'sampled_users' %>
  </div>
</div>
<div class='container-fluid'>
  <div class='row'>
    <div class='elevator-pitch-container'>
      <div class='elevator-pitch'>
        <p>AND BROWSE HARVESTS AROUND THE GLOBE</p>
      </div>
    </div>
  </div>
  <div class='row'>
    <%= render partial: 'maps/main_map' %>
  </div>
</div>
