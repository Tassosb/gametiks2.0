<div class='log'>
  <%= image_tag harvest.image.url(:square), class: 'harvest-img'%>
  <div class='img-infoscreen'>
    <div id='text-wrapper'>
      <h5>Registered <%= harvest.created_at %></h5>
      <% if @user == current_user %>
      <div class='links'>
        <%= link_to 'Edit', edit_harvest_path(harvest) %>
        <%= link_to "Delete", harvest_path(harvest), method: :delete, data: { confirm: 'Confirm Delete?' } %>
      </div>
      <% end %>
      <h4><span class='label'>Game Type: </span><span class='field'><%= harvest.animal_type %></span></h4>
      <h4><span class='label'>Weapon Used: </span><span class='field'><%= harvest.weapon_type %></span></h4>
      <h4><span class='label'>Points Awarded: </span><span class='field'><%= harvest.formatted_points %></span></h4>
      <% if !harvest.description.blank? %>
      <p>
        <%= harvest.description %>
      </p>
      <% end %>
    </div>
  </div>

  <div class='comments-container'>
    <ul id='comments-list-<%= harvest.id %>'>
     <% harvest.comments.each do |comment| %>
      <%= render 'comments/comment', comment: comment %>
     <% end %>
    </ul>
  </div>
  <%= form_for [harvest, harvest.comments.new], :remote => true do |f| %>
    <%= f.label :body, "New Comment" %>
    <%= f.text_area :body %>
    <p><%= f.submit "Add Comment"%></p>
  <% end %>
</div>
